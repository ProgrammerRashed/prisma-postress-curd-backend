generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//ENUMS
enum UserRole {
  SUPER_ADMIN
  ADMIN
  DOCTOR
  PAITENT
}

enum UserStatus {
  ACTIVE 
  BLOCK
}

model User {
  id String @id @default(uuid())
  email String @unique
  password String
  role UserRole @default(PAITENT)
  needPasswordChange Boolean @default(true)
  status UserStatus @default(ACTIVE)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  admin Admin?

  @@map("users")
} 

model Admin{
  id String @id @default(uuid())
  name String 
  email String @unique
  profilePhoto String?
  contactNumber String
  isDeleted Boolean
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user           User     @relation(fields: [email], references: [email])

  @@map("admins")
}